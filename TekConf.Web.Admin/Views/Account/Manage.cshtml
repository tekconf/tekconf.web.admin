@using TekConf.Web.Admin.Models;
@using Microsoft.AspNet.Identity;

<section class="content">

	<ol class="breadcrumb">
		<li class="active"><i class="fa fa-home fa-fw"></i> Account</li>
	</ol>

	<div class="header">
		<div class="col-md-12">
			<h3 class="header-title">Manage</h3>
			<p class="header-info">Overview and latest statistics</p>
		</div>
	</div>

	<!-- CONTENT -->
	<div class="main-content">

		<div class="row">

			<div class="col-md-12">

				<p class="text-success">@ViewBag.StatusMessage</p>
				<div class="row">
					<div class="col-md-12">
						@if (ViewBag.HasLocalPassword)
						{
							@Html.Partial("_ChangePasswordPartial")
						}
						else
						{
							@Html.Partial("_SetPasswordPartial")
						}

						<section id="externalLogins">
							@Html.Action("RemoveAccountList")
							@Html.Partial("_ExternalLoginsListPartial", new { Action = "LinkLogin", ReturnUrl = ViewBag.ReturnUrl })
						</section>
					</div>
				</div>

			</div>
		</div>
	</div>
</section>
